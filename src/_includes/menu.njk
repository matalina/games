{% set navPages = collections.all | eleventyNavigation %}
<nav class="navbar navbar-expand-lg fixed-top bg-dark" data-bs-theme="dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">Navbar</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        {% for navPage in navPages %}
        {% if navPage.children.length %}
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="{{navPage.url}}" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            {{navPage.title}}
          </a>
        {% else %}
          <li class="nav-item">
            <a class="nav-link" aria-current="page" href="{{navPage.url}}">{{navPage.title}}</a>
        {% endif %}

          {% if navPage.children.length %}
            <ul class="dropdown-menu">
              {% for child in navPage.children %}
                <li><a class="dropdown-item" href="{{child.url}}">{{child.title}}</a></li>
              {% endfor %}
          {% endif %}

        </li>
        {% endfor %}
      </ul>
    </div>
  </div>
</nav>
